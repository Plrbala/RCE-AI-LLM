import mysql.connector

# Step 1: Connect to MySQL
def get_connection():
    return mysql.connector.connect(
        host="localhost",
        user="root",        # Change if needed
        password="yourpassword",  # Change your MySQL password
        database="python_crud"
    )

# Step 2: Create
def insert_student(name, age, course):
    conn = get_connection()
    cursor = conn.cursor()
    sql = "INSERT INTO students (name, age, course) VALUES (%s, %s, %s)"
    values = (name, age, course)
    cursor.execute(sql, values)
    conn.commit()
    print(f"{cursor.rowcount} record inserted.")
    conn.close()

# Step 3: Read
def view_students():
    conn = get_connection()
    cursor = conn.cursor()
    cursor.execute("SELECT * FROM students")
    result = cursor.fetchall()
    for row in result:
        print(row)
    conn.close()

# Step 4: Update
def update_student(student_id, name, age, course):
    conn = get_connection()
    cursor = conn.cursor()
    sql = "UPDATE students SET name=%s, age=%s, course=%s WHERE id=%s"
    values = (name, age, course, student_id)
    cursor.execute(sql, values)
    conn.commit()
    print(f"{cursor.rowcount} record(s) updated.")
    conn.close()

# Step 5: Delete
def delete_student(student_id):
    conn = get_connection()
    cursor = conn.cursor()
    sql = "DELETE FROM students WHERE id=%s"
    values = (student_id,)
    cursor.execute(sql, values)
    conn.commit()
    print(f"{cursor.rowcount} record(s) deleted.")
    conn.close()

# Step 6: Menu-driven program
def main():
    while True:
        print("\n--- Student CRUD Menu ---")
        print("1. Add Student")
        print("2. View Students")
        print("3. Update Student")
        print("4. Delete Student")
        print("5. Exit")

        choice = input("Enter your choice: ")

        if choice == '1':
            name = input("Enter name: ")
            age = int(input("Enter age: "))
            course = input("Enter course: ")
            insert_student(name, age, course)

        elif choice == '2':
            view_students()

        elif choice == '3':
            student_id = int(input("Enter student ID to update: "))
            name = input("Enter new name: ")
            age = int(input("Enter new age: "))
            course = input("Enter new course: ")
            update_student(student_id, name, age, course)

        elif choice == '4':
            student_id = int(input("Enter student ID to delete: "))
            delete_student(student_id)

        elif choice == '5':
            print("Exiting program...")
            break

        else:
            print("Invalid choice! Try again.")

if __name__ == "__main__":
    main()
